    <script>

function addToWishlist(productId, element) {
    fetch('/wishlist/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId: productId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            element.style.color = 'red'; 
            element.style.pointerEvents = 'none';

            Swal.fire({
                title: "Added to Wishlist!",
                text: "This book has been successfully added to your wishlist.",
                icon: "success",
                showConfirmButton: false,
                timer: 2000 
            });

        } else {
            // Show Error Message
            Swal.fire({
                title: "Oops!",
                text: data.message || "Failed to add to wishlist.",
                icon: "error"
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: "Error!",
            text: "Something went wrong. Try again!",
            icon: "error"
        });
    });
}




    async function handleAddToCart(productId, buttonElement) {
        try {
            const response = await fetch(`/addToCart?productId=${productId}`, {
                method: 'GET',
                credentials: 'same-origin'
            });

            if (response.ok) {
                window.location.href = '/cart';
            } else {
                const result = await response.json();

                if (result.message === 'Out of stock') {
                    buttonElement.innerText = 'Out of stock';
                    buttonElement.classList.add('out-of-stock');
                    buttonElement.disabled = true; 
                }
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }


    </script>

