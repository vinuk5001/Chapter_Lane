<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>Edit Profile - Evara</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="assets/imgs/theme/favicon.svg">
    <link rel="stylesheet" href="assets/css/main.css?v=3.4">
    <style>
        .btn-small {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: #fff;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-small:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <header class="header-area header-style-5">
    </header>

    <div class="mobile-header-active mobile-header-wrapper-style">
    </div>

    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/editProfile" rel="nofollow">My Profile</a>
                    <span></span> Edit Profile
                </div>
            </div>
        </div>
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Account Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <form action="/editProfile" method="post">
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    <label>UserName <span class=""></span></label>
                                                    <input class="form-control square" name="name" type="text"
                                                        value="<%= user.username %>">
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <label>Email <span class=""></span></label>
                                                    <input class="form-control square" name="email" type="email"
                                                        value="<%= user.email %>">
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <label>mobile_number <span class=""></span></label>
                                                    <input class="form-control square" name="mobile_number"
                                                        type="mobile no" value="<%= user.mobile_number %>">
                                                    <input type="hidden" name="id" value="<%= user._id  %>">
                                                </div>

                                                <div class="col-md-12">
                                                    <button type="submit" class="btn btn-fill-out submit" name="submit"
                                                        value="Submit">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="./assets/js/main.js?v=3.4"></script>
    <script>

        document.querySelector('form').addEventListener('submit', function (event) {
            console.log("hiiiiii");
            var errorMessages = document.querySelectorAll('.error-message');
            errorMessages.forEach(function (message) {
                message.remove();
            });

            var isValid = true;

            var name = document.querySelector('input[name="name"]').value.trim();
            console.log("name", name);
            var email = document.querySelector('input[name="email"]').value.trim();
            console.log("email", email)
            var mobile = document.querySelector('input[name="mobile_number"]').value.trim();
            console.log("mobile", mobile);
            if (name.length < 3) {
                showError('input[name="name"]', 'Username must be at least 3 characters long and not empty.');
                isValid = false;
            }

            var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            console.log("emailPattern", emailPattern);
            if (!emailPattern.test(email)) {
                showError('input[name="email"]', 'Please enter a valid email address.');
                isValid = false;
            }

            if (mobile.length !== 10 || !/^[0-9]+$/.test(mobile)) {
                showError('input[name="mobile_number"]', 'Please enter a valid 10-digit mobile number.');
                isValid = false;
            }

            if (!isValid) {
                event.preventDefault();
            }
        })

        function showError(selector, message) {
            var inputElement = document.querySelector(selector);
            var errorElement = document.createElement('div');
            errorElement.className = 'error-message';
            errorElement.style.color = 'red';
            errorElement.textContent = message;
            inputElement.parentNode.appendChild(errorElement);
        }


    </script>
</body>

</html>