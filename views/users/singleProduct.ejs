    <script>

async function addToCart(productId) {
  try {
    const response = await fetch(`/addToCart?productId=${productId}`, {
      method: 'GET',
      credentials: 'same-origin'
    });

    if (response.ok) {
      Swal.fire({
        title: "Added to Cart!",
        text: "Product has been added successfully.",
        icon: "success",
        showCancelButton: true,
        confirmButtonText: "Go to Cart",
        cancelButtonText: "Continue Shopping"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = '/cart';
        }
      });

      // Disable the "Add to Cart" button after adding
      const button = document.getElementById(`addToCart-${productId}`);
      if (button) {
        button.innerText = "‚úîÔ∏è Already in Cart";
        button.style.background = "gray";
        button.style.pointerEvents = "none";
      }
      
    } else {
      const result = await response.json();
      if (result.message === 'Out of stock') {
        const button = document.getElementById(`addToCart-${productId}`);
        if (button) {
          button.innerText = "Out of stock";
          button.href = "#";
          button.style.background = "gray";
        }

        Swal.fire({
          title: "Out of Stock!",
          text: "This product is currently unavailable.",
          icon: "error",
          confirmButtonText: "OK"
        });
      }
    }
  } catch (error) {
    console.error('Error:', error);
    Swal.fire({
      title: "Error!",
      text: "Something went wrong. Please try again.",
      icon: "error",
      confirmButtonText: "OK"
    });
  }
}


        function addToWishlist(productId, element) {
    fetch('/wishlist/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId: productId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            element.innerHTML = '‚úîÔ∏è Already in Wishlist';  
            element.disabled = true;  // Prevent multiple clicks

            Swal.fire({
                title: "Added to Wishlist!",
                text: "This book has been added to your wishlist.",
                icon: "success",
                showConfirmButton: false,
                timer: 2000
            });
        } else {
            Swal.fire({
                title: "Oops!",
                text: data.message || "Failed to add to wishlist.",
                icon: "error"
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: "Error!",
            text: "Something went wrong. Try again!",
            icon: "error"
        });
    });
}


