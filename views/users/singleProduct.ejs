    <script>

        async function addToCart(productId) {
            try {
                const response = await fetch(`/addToCart?productId=${productId}`, {
                    method: 'GET',
                    credentials: 'same-origin'
                });

                if (response.ok) {
                    Swal.fire({
                        title: "Added to Cart!",
                        text: "Product has been added successfully.",
                        icon: "success",
                        showCancelButton: true,
                        confirmButtonText: "Go to Cart",
                        cancelButtonText: "Continue Shopping"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/cart';
                        }
                    })

                    const button = document.getElementById(`addToCart-${productId}`);
                    if (button) {
                        button.innerText = "✔️ Already in Cart";
                        button.style.background = "gray";
                        button.style.pointerEvents = "none";
                    }

                } else {
                    const result = await response.json();
                    if (result.message === 'Out of stock') {
                        const button = document.getElementById(`addToCart-${productId}`);
                        if (button) {
                            button.innerText = "Out of stock";
                            button.href = "#";
                            button.style.background = "gray";
                        }

                        Swal.fire({
                            title: "Out of Stock!",
                            text: "This product is currently unavailable.",
                            icon: "error",
                            confirmButtonText: "OK"
                        });
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    title: "Error!",
                    text: "Something went wrong. Please try again.",
                    icon: "error",
                    confirmButtonText: "OK"
                });
            }
        }


        function addToWishlist(productId, element) {
            fetch('/wishlist/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        element.innerHTML = '✔️ Already in Wishlist';
                        element.disabled = true;

                        Swal.fire({
                            title: "Added to Wishlist!",
                            text: "This book has been added to your wishlist.",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 2000
                        });
                    } else {
                        Swal.fire({
                            title: "Oops!",
                            text: data.message || "Failed to add to wishlist.",
                            icon: "error"
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: "Error!",
                        text: "Something went wrong. Try again!",
                        icon: "error"
                    });
                })
        }


        document.getElementById('review-form').addEventListener('submit', async function (e) {
            e.preventDefault();

            const urlParams = new URLSearchParams(window.location.search);
            const productId = urlParams.get('id');
            const rating = document.getElementById('rating').value;
            const comment = document.getElementById('comment').value;

            const reviewData = { rating, comment };
            const token = localStorage.getItem('userToken');

            try {
                const orderCheckResponse = await fetch(`/product/${productId}/has-ordered`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                    },
                });

                const orderCheckResult = await orderCheckResponse.json();

                if (!orderCheckResult.ordered) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'You need to purchase this product before leaving a review.',
                        showConfirmButton: true
                    });
                    return;
                }


                const response = await fetch(`/product/${productId}/review`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`,
                    },
                    body: JSON.stringify(reviewData),
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Review Added',
                        text: 'Your review has been added successfully!',
                        showConfirmButton: false,
                        timer: 1500
                    });

                    addReviewToDOM(result.review);
                    document.getElementById('review-form').reset();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.error || 'Something went wrong. Please try again later.',
                        showConfirmButton: true
                    });
                }
            } catch (error) {
                console.error('Error adding review:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while submitting your review.',
                    showConfirmButton: true
                });
            }
        });
        function addReviewToDOM(review) {
            const reviewsList = document.getElementById('reviews-list');
            const reviewElement = document.createElement('div');
            reviewElement.classList.add('single-comment', 'justify-content-between', 'd-flex');
            reviewElement.innerHTML = `
        <div class="user justify-content-between d-flex">
            <div class="desc">
                <div class="product-rate d-inline-block">
                    <div class="product-rating" style="width: ${review.rating * 20}%"></div>
                </div>
                <p>${review.comment}</p>
                <small>By ${review.userId.username} on ${new Date(review.createdAt).toLocaleDateString()}</small>
            </div>
        </div>
    `;
            reviewsList.prepend(reviewElement);
            reviewsList.scrollIntoView({ behavior: 'smooth' });
        }
    </script>


