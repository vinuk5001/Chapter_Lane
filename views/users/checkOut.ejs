<body>
    <nav class="navbar">
        <div class="logo">
            <i class="fas fa-book"></i>
            <span>ChapterLane</span>
        </div>
        <ul>
            <li><a href="home">Home</a></li>
            <li><a href="shop">Shop</a></li>

        </ul>

        <div class="search-bar">
            <form action="/searchInShop" method="POST">
