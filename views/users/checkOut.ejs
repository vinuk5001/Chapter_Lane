                <button type="submit"><i class="fi-rs-search"></i></button>
            </form>
        </div>
        <div class="user-actions">
            <a href="/wishlist" class="wishlist-icon">
                <i class="fas fa-heart"></i> Wishlist
            </a>
            <a href="/cart" class="cart-icon">
                <i class="fas fa-shopping-cart"></i> Cart
            </a>
        </div>
    </nav>

    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Checkout
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">

                    <div class="col-md-4">
                        <div class="coupon-section">
                            <h5>Available Coupons</h5>
                            <div id="couponList">
                                <label>
                                    <input type="checkbox" class="coupon-checkbox" data-code="COUPON1" />
                                    COUPON1
                                </label>
                                <label>
                                    <input type="checkbox" class="coupon-checkbox" data-code="COUPON2" />
                                    COUPON2
                                </label>

                            </div>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="address-selection">
                            <h5 class="mb-25">Shipping Address</h5>
                            <div class="address-cards">
                                <% if (typeof addresses !=='undefined' && addresses.length> 0) { %>
                                    <% addresses.forEach(addr=> { %>
                                        <div class="address-card">
                                            <input type="radio" name="addressId" id="address-<%= addr._id %>"
                                                value="<%= addr._id %>" class="address-radio">
                                            <label for="address-<%= addr._id %>" class="address-details">
                                                <div class="address-info">
                                                    <h6>
                                                        <%= addr.address %>
                                                    </h6>
                                                    <p><strong>City:</strong>
                                                        <%= addr.city %>
                                                    </p>
                                                    <p><strong>State:</strong>
                                                        <%= addr.state %>
                                                    </p>
                                                    <p><strong>Pincode:</strong>
                                                        <%= addr.pincode %>
                                                    </p>
                                                </div>
                                            </label>
                                            <button class="btn-delete-address"
                                                onclick="deleteAddress('<%= addr._id %>')">Delete Address</button>

                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                <div class="no-addresses">No addresses found</div>
                                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="order-review">
                            <div class="order-review-header mb-20">
                                <h4>Your Orders</h4>
                            </div>
                            <div class="order-table-container table-responsive text-center">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (cartItems.length===0) { %>
                                            <tr>
                                                <td colspan="4">Your cart is empty.</td>
                                            </tr>
                                            <% } else { %>
                                                <% cartItems.forEach(item=> { %>
                                                    <tr>
                                                        <td class="product-des">
                                                            <div class="d-flex align-items-center">
                                                                <div class="image product-thumbnail me-3">
                                                                    <img src="/adminImages/<%= item.product.images[0] %>"
                                                                        alt="<%= item.product.name %>"
                                                                        class="img-fluid rounded">
                                                                </div>
                                                                <div>
                                                                    <h4 class="product-name">
                                                                        <%= item.product.name %>
                                                                    </h4>
                                                                    <input type="hidden" id="productId"
                                                                        value="<%= item.product._id %>">
                                                                    <% if (item.product.countInStock <=10) { %>
                                                                        <p class="font-xs text-danger"
                                                                            id="countInStock-<%= item.product._id %>">
                                                                            Only <%= item.product.countInStock %> stocks
                                                                                are
                                                                                remaining, hurry up
                                                                        </p>
                                                                        <% } else if
                                                                            (item.product.status==='out-of-stock' ) { %>
                                                                            <p class="text-danger">
                                                                                <%= item.product.status %>
                                                                            </p>
                                                                            <% } else if (item.product.countInStock> 10)
                                                                                { %>
                                                                                <p class="font-xs text-info"
                                                                                    id="countInStock-<%= item.product._id %>">
                                                                                    Stocks available
                                                                                </p>
                                                                                <% } %>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="price">Rs <%= item.product.price.toFixed(2) %>
                                                        </td>
                                                        <td class="quantity">
                                                            <%= item.quantity %>
                                                        </td>
                                                        <td class="subtotal">Rs <%= item.subtotal.toFixed(2) %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <tr>
                                                            <td colspan="3" class="text-end"><strong>Total:</strong>
                                                            </td>
                                                            <td class="total-amount">
                                                                Rs <span class="font-xl text-brand fw-900">
                                                                    <%= totalAmount.toFixed(2) %>
                                                                </span>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <div class="payment-section mb-25">
                                <h5>Payment</h5>
                                <form id="paymentForm">
                                    <div class="form-check">
                                        <input type="radio" name="payment_option" value="cashondelivery" id="cod"
                                            class="form-check-input">
                                        <label for="cod" class="form-check-label">Cash on Delivery</label>
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" name="payment_option" value="onlinepayment" id="online"
                                            class="form-check-input">
                                        <label for="online" class="form-check-label">Online Payment</label>
                                    </div>
                                </form>

                                <form id="orderForm" class="order-form">
                                    <input type="hidden" name="payment_option" id="paymentOption"
                                        value="cashondelivery"> <!-- Default is COD -->
                                    <input type="hidden" name="totalAmount" value="<%= totalAmount.toFixed(2) %>">
                                    <button type="submit" id="placeOrderButton" class="btn btn-primary mt-30">
                                        Place Order
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row mt-50">
                    <div class="col-md-6">
                        <div class="card address-form-card">
                            <div class="card-header">
                                <h5>Address Form</h5>
                            </div>
                            <div class="card-body">
                                <form id="addressForm" action="/addressCheckout" method="post">
                                    <div class="form-group mb-3">
                                        <label for="address" class="form-label">Address:</label>
                                        <input type="text" id="address" name="address" class="form-control" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="city" class="form-label">City:</label>
                                        <input type="text" id="city" name="city" class="form-control" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="state" class="form-label">State:</label>
                                        <input type="text" id="state" name="state" class="form-control" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="pincode" class="form-label">Pincode:</label>
                                        <input type="number" id="pincode" name="pincode" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-brand btn-block">
                                            Add Address
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row mt-50">
                    <div class="col-12">
                        <div class="divider"></div>
                    </div>
                </div>
            </div>
        </section>
    </main>



    <footer class="footer">
        <p>&copy; 2024 ChapterLane. All rights reserved.</p>
        <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a> | <a href="#">Contact Us</a></p>
        <div>
            <a href="#">Facebook</a> | <a href="#">Twitter</a> | <a href="#">Instagram</a>
