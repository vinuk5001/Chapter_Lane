    <script>
        document.getElementById('placeOrderButton').addEventListener('click', async function (event) {
            event.preventDefault();

            const addressRadioButtons = document.querySelectorAll('input[name="addressId"]');
            let selectedAddressId;
            addressRadioButtons.forEach(option => {
                if (option.checked) {
                    selectedAddressId = option.value;
                }
            })

            const paymentOptions = document.querySelectorAll('input[name="payment_option"]');
            let selectedPaymentMethod;
            paymentOptions.forEach(option => {
                if (option.checked) {
                    selectedPaymentMethod = option.value;
                }
            });


            if (!selectedPaymentMethod || !selectedAddressId) {
                console.log("No payment method or address selected");

                Swal.fire({
                    icon: 'warning',
                    title: 'Missing Information',
                    text: 'Please select a payment option and provide an address.',
                    confirmButtonText: 'OK'
                });
                return;
            }


            const orderData = {
                addressId: selectedAddressId,
                paymentMethod: selectedPaymentMethod,
                subtotal: originalTotalAmount,
                discountedTotal: finalTotalAmount,
                selectedCoupons: selectedCoupons
            };

            console.log("selected payment", selectedPaymentMethod);
            console.log("orderData", orderData);


            if (selectedPaymentMethod === 'cashondelivery' && finalTotalAmount > 1000) {
                Swal.fire({
                    icon: 'error',
                    title: 'COD Unavailable',
                    text: 'Cash on Delivery is not available for orders above Rs 1000.',
                    confirmButtonText: 'OK',
                    customClass: {
                        confirmButton: 'btn btn-primary'
                    }
                });
                return;
            }


            if (selectedPaymentMethod === 'cashondelivery') {
                try {
                    const response = await fetch('/placeorder', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(orderData),
                    });

                    if (response.ok) {
                        window.location.href = '/order-confirmation';
                    } else {
                        console.error('Error placing order:', response.statusText);
                        Swal.fire({
                            icon: 'error',
                            title: 'Order Placement Failed',
                            text: 'There was an issue placing your order. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch (error) {
                    console.error('Error placing order:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'There was an error processing your order. Please try again.',
                        confirmButtonText: 'OK'
                    });
                }
            }


            else if (selectedPaymentMethod === 'onlinepayment') {
                console.log("selectedPayment", selectedPaymentMethod);

                const formData = $('.order-form').serialize() + "&" + $.param(orderData);
                console.log("formData", formData);

                $.ajax({
                    url: "/createOrder",
                    type: "POST",
                    data: formData,
                    success: function (res) {
                        console.log("response from backend:", res);
                        if (res.success) {
                            if (!res.key_id) {
                                console.error("Error:key_id is undefined in response")
                                return;
                            }
                            var options = {
                                "key": "" + res.key_id + "",
                                "amount": "" + res.totalAmount + "",
                                "currency": "INR",
                                "name": "" + res.name + "",
                                "description": "" + res.description + "",
                                "image": "https://dummyimage.com/600x400/000/fff",
                                "order_id": "" + res.order_id + "",
                                "handler": function (response) {
                                    window.location.href = "/payonline?order_id=" + res.order_id +
                                        "&payment_id=" + response.razorpay_payment_id +
                                        "&address_id=" + selectedAddressId +
                                        "&selectedCoupons=" + encodeURIComponent(JSON.stringify(selectedCoupons)) +
                                        "&subtotal=" + originalTotalAmount +
                                        "&paymentMethod=" + selectedPaymentMethod;
                                },
                                "prefill": {
                                    "contact": "" + res.contact + "",
                                    "name": "" + res.name + "",
                                    "email": "" + res.email + ""
                                },
                                "notes": {
                                    "description": "" + res.description + ""
                                },
                                "theme": {
                                    "color": "#2300a3"
                                }
                            };

                            var razorpayObject = new Razorpay(options);
                            razorpayObject.on('payment.failed', function (response) {
                                window.location.href = "/payonlineFailed?order_id=" + res.order_id +
                                    "&payment_id=" + response.razorpay_payment_id +
                                    "&address_id=" + selectedAddressId +
                                    "&selectedCoupons=" + encodeURIComponent(JSON.stringify(selectedCoupons)) +
                                    "&subtotal=" + originalTotalAmount +
                                    "&paymentMethod=" + selectedPaymentMethod;
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Payment Failed',
                                    text: 'Your payment could not be processed. Please try again.',
                                    confirmButtonText: 'OK'
                                });
                            });

                            razorpayObject.open();
                        } else {
                            alert(res.msg);
                        }
                    }
                });
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            fetchCoupon()
            initializeTotalAmount()

            // document.getElementById('placeOrderButton').addEventListener('click', placeOrder);
        });


        let coupons = [];
        let selectedCoupons = [];
        let originalTotalAmount = 0;
        let finalTotalAmount = 0;

        function initializeTotalAmount() {
            const totalAmountElement = document.querySelector(".total-amount");
            if (totalAmountElement) {
                originalTotalAmount = parseFloat(totalAmountElement.textContent.replace("Rs ", "").trim());
                finalTotalAmount = originalTotalAmount;
            }
        }

        async function fetchCoupon() {
            try {
                console.log(" Fetching Coupons...")
                const response = await fetch("/fetchCoupons")
                if (!response.ok) throw new Error('Network response was not ok')

                const data = await response.json();
                coupons = data.coupons;
                displayCoupons();
            } catch (error) {
                console.error(" Error fetching coupons:", error);
            }
        }

        function displayCoupons() {
            const couponList = document.getElementById("couponList");
            couponList.innerHTML = '';

            if (coupons.length === 0) {
                couponList.innerHTML = '<p>No coupons available</p>';
                return;
            }

            coupons.forEach(coupon => {
                const couponElement = document.createElement("div");
                couponElement.classList.add("coupon-item");
                couponElement.innerHTML = `
            <div class="form-check">
                <input type="checkbox" class="form-check-input coupon-checkbox" 
                       id="coupon-${coupon._id}" 
                       name="coupon" 
                       value="${coupon._id}" 
                       data-discount="${coupon.discount}" 
                       data-min-amount="${coupon.minimumAmount}">
                <label class="form-check-label" for="coupon-${coupon._id}">
                    <h6>${coupon.couponName}</h6>
                    <p>Code: ${coupon.couponCode}</p>
                    <p>Discount: ${coupon.discount}%</p>
                    <p>Minimum Amount: Rs ${coupon.minimumAmount}</p>
                </label>
            </div>
        `;
                couponList.appendChild(couponElement);
            });

            document.querySelectorAll(".coupon-checkbox").forEach(input => {
                input.addEventListener("change", handleCouponSelection);
            });
        }

        async function handleCouponSelection(event) {
            const checkbox = event.target;
            const couponId = checkbox.value;
            const discount = parseFloat(checkbox.dataset.discount);
            const minAmount = parseFloat(checkbox.dataset.minAmount);

            if (checkbox.checked) {
                selectedCoupons.push({ couponId, discount, minAmount });
                await applyCoupons(couponId);
            } else {
                selectedCoupons = selectedCoupons.filter(coupon => coupon.couponId !== couponId);
                await removeCoupon(couponId);
            }
            console.log("checkbox", checkbox);
            console.log("couponId", couponId);
            console.log("discount", discount);
            console.log("minAmount", minAmount);

            updateTotalAmount();
        }

        async function applyCoupons(couponId) {
            try {
                const response = await fetch(`/applyCoupons`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ couponId })
                });

                const data = await response.json();
                console.log("data", data);
                if (!data.success) {
                    alert(data.message);
                } else {
                    finalTotalAmount = data.newTotal
                    updateTotalAmount()
                }
            } catch (error) {
                console.error(' Error applying coupon:', error);
            }
        }

        async function removeCoupon(couponId) {
            try {
                const response = await fetch(`/removeCoupons?couponId=${couponId}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();
                if (!data.success) {
                    alert(data.message);
                }
            } catch (error) {
                console.error(' Error removing coupon:', error);
            }
        }


        function updateTotalAmount() {
            let totalDiscount = 0;
            let updatedFinalAmount = originalTotalAmount;

            selectedCoupons.forEach(coupon => {
                console.log(`Processing coupon ID: ${coupon.couponId}`);
                console.log(`Original Amount: ${originalTotalAmount}`);
                console.log(`Coupon Minimum Amount: ${coupon.minAmount}`);
                console.log(`Coupon Discount: ${coupon.discount}`);

                if (originalTotalAmount >= coupon.minAmount) {
                    let discountAmount = (originalTotalAmount * coupon.discount) / 100;
                    totalDiscount += discountAmount;
                    console.log(`Applying discount: Rs ${discountAmount}`);
                } else {
                    alert(`Total amount is less than the minimum required for coupon ${coupon.couponId}`);
                }
            });

            updatedFinalAmount = originalTotalAmount - totalDiscount;
            finalTotalAmount = updatedFinalAmount < 0 ? 0 : updatedFinalAmount;
            console.log("Final Total Amount after discount:", finalTotalAmount);

            const totalAmountElement = document.querySelector(".total-amount");
            if (totalAmountElement) {
                totalAmountElement.innerHTML = `Rs <span class="font-xl text-brand fw-900">${finalTotalAmount.toFixed(2)}</span>`;
            }

            const totalAmountInput = document.querySelector('input[name="totalAmount"]');
            if (totalAmountInput) {
                totalAmountInput.value = finalTotalAmount.toFixed(2);
                console.log("Updated totalAmount input value:", totalAmountInput.value);
            }
        }


        function deleteAddress(addressId) {
            if (confirm('Are you sure you want to delete this address?')) {
                fetch('/deleteAddress/' + addressId, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                    .then(response => {
                        console.log("Response Status:", response.status);

                        if (response.ok) {

                            const addressCard = document.getElementById('address-card-' + addressId);


                            if (addressCard) {
                                addressCard.remove();
                                alert('Address deleted successfully');
                            } else {
                                alert('Address not found in the DOM');
                            }
                        } else {
                            alert('Failed to delete address');
                        }
                    })
                    .catch(error => {
                        alert('Error occurred while deleting the address');
                        console.error(error);
                    });
            }
        }
    </script>
