        async function downloadInvoice() {
            console.log("üì• Downloading Invoice...");
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            let y = 10;
            try {
                console.log("hiiii hloooo");
                const urlParams = new URLSearchParams(window.location.search);
                const orderId = urlParams.get("orderid");
                console.log("orderId", orderId);
                if (!orderId) {
                    console.error("‚ùå Order ID is missing from URL");
                    alert("Order ID is missing! Cannot fetch invoice.");
                    return;
                }
                console.log("üõí Fetching order with ID:", orderId);
                const apiUrl = `${window.location.origin}/api/orders/${orderId}`;
                const response = await fetch(apiUrl, { method: "GET" });
                if (!response.ok) {
                    throw new Error(`‚ùå HTTP Error: ${response.status} - ${response.statusText}`);
                }
                const order = await response.json();
                console.log("Order Fetched Successfully:", order);
                doc.setFontSize(18);
                doc.text("Invoice", 105, y, null, null, 'center');
                y += 10;

                doc.setFontSize(12);
                doc.text("Order Information", 10, y);
                y += 10;

                const orderDetails = [
                    ["Order Date", new Date(order.orderDate).toLocaleDateString()],
                    ["Status", order.orderStatus],
                    ["Bill Total", order.billTotal],
                    ["Payment Method", order.paymentMethod]
                ]
                console.log("orderDetails", orderDetails)

                doc.autoTable({
                    startY: y,
                    head: [["Label", "Value"]],
                    body: orderDetails,
                    theme: 'grid',
                    columnStyles: { 0: { halign: 'left', cellWidth: 60 }, 1: { halign: 'left' } }
                })

                y = doc.lastAutoTable.finalY + 10;
                doc.text("Shipping Address", 10, y);
                y += 10;

                const shippingData = order.shippingAddress
                    ? [
                        ["Address", order.shippingAddress.address || "N/A"],
                        ["City", order.shippingAddress.city || "N/A"],
                        ["State", order.shippingAddress.state || "N/A"],
                        ["Pincode", order.shippingAddress.pincode || "N/A"]
                    ]
                    : [["Address", "No shipping address found."]];
                console.log("shippingData", shippingData);
                doc.autoTable({
                    startY: y,
                    head: [["Label", "Details"]],
                    body: shippingData,
                    theme: 'grid',
                    columnStyles: { 0: { halign: 'left', cellWidth: 60 }, 1: { halign: 'left' } }
                })

                y = doc.lastAutoTable.finalY + 10;
                if (order.items && order.items.length > 0) {
                    doc.text("Ordered Items", 10, y)
                    y += 10;

                    const itemData = order.items.map(item => [
                        item.product?.name || "Unknown",
                        item.quantity,
                        item.subtotal
                    ]);
                    console.log("itemData", itemData);
