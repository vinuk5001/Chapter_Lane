                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Price</th>
                                    <th>Discount (per item)</th>
                                    <th>Coupon Discount</th>
                                    <th>Total Order Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let overallDiscount=0; let overallSales=0; let overallOrderAmount=0; %>
                                    <% salesOrder.forEach(saleorder=> { %>
                                        <% let orderDiscount=0; %>
                                            <% saleorder.items.forEach((item, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <% if (item.product && item.product.name) { %>
                                                            <%= item.product.name %>
                                                                <% } else { %>
                                                                    Product not available
                                                                    <% } %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(saleorder.orderDate).toLocaleDateString() %>
                                                    </td>
                                                    <td>
                                                        <%= saleorder.orderStatus || 'Status not available' %>
                                                    </td>
                                                    <td>
                                                        <%= item.product?.price || 'Price not available' %>
                                                    </td>
                                                    <td>
                                                        <% orderDiscount +=(item.product?.discount || 0); %>
                                                            <%= item.product?.discount || 0 %>
                                                    </td>
                                                    <% if (index===saleorder.items.length - 1) { %>
                                                        <td>
                                                            <%= saleorder.subtotal - saleorder.billTotal %>
                                                        </td>
                                                        <td>
                                                            <%= saleorder.billTotal %>
                                                        </td>
                                                        <% } else { %>
                                                            <td></td>
                                                            <td></td>
                                                            <% } %>
                                                </tr>
                                                <% }); %>
                                                    <% overallDiscount +=orderDiscount; %>
                                                        <% overallSales +=1; %>
                                                            <% overallOrderAmount +=saleorder.billTotal; %>
                                                                <% }); %>
