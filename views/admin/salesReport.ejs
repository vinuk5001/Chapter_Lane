    <script>

        document.addEventListener('DOMContentLoaded', function () {
            const picker = new Litepicker({
                element: document.getElementById('dateRangePicker'),
                singleMode: false,
                format: 'YYYY-MM-DD',

                onSelect : function(date1,date2){
                    applyFilter(date1.format('YYYY-MM-DD'),date2.format('YYYY-MM-DD'))
                }
            })
        
            
            function applyFilter(startDate, endDate) {
                document.getElementById('startDateInput').value = startDate;
                document.getElementById('endDateInput').value = endDate;

                console.log("startDate:",document.getElementById('startDateInput').value)
                console.log("endDate:",document.getElementById('endDateInput').value);
                document.getElementById('salesFilterForm').submit();
                console.log("Filtering from", startDate, "to", endDate);
            }

            document.getElementById('dailyFilter').addEventListener('click', function () {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0]; 
                applyFilter(formattedDate, formattedDate);
            });

            document.getElementById('weeklyFilter').addEventListener('click', function () {
                const today = new Date();
                const lastWeek = new Date();
                lastWeek.setDate(today.getDate() - 6); 
                applyFilter(lastWeek.toISOString().split('T')[0], today.toISOString().split('T')[0]);
            });

            document.getElementById('yearlyFilter').addEventListener('click', function () {
                const today = new Date();
                const lastYear = new Date(today);
                lastYear.setFullYear(today.getFullYear() - 1); 
                applyFilter(lastYear.toISOString().split('T')[0], today.toISOString().split('T')[0]);
            });



            document.getElementById('filterOrders').addEventListener('click', function (event) {
                event.preventDefault();
                const dateRange = document.getElementById('dateRangePicker').value.split(' - ');
                if (dateRange.length === 2) {
                    applyFilter(dateRange[0], dateRange[1]);
                } else {
                    alert("Please select a valid date range.");
                }
            });
        });



        function updateOrdersTable(data) {
            const tableBody = document.getElementById('ordersTableBody');
            tableBody.innerHTML = '';

            data.salesOrder.forEach(order => {
                order.items.forEach(item => {
                    const row = document.createElement('tr');

                    row.innerHTML = `
                <td>${item.product ? item.product.name : 'Product not available'}</td>
                <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                <td>${order.orderStatus}</td>
                <td>${item.price}</td>
            `;

                    tableBody.appendChild(row);
                });
            });

            document.getElementById('totalAmount').textContent = `Total: ₹${data.totalAmount}`;
        }

    </script>
