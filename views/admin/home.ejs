    <script>
        const logoutButton = document.getElementById('logoutButton');

        logoutButton.addEventListener('click', function () {
            window.location.href = '/admin/logout';
        });

        document.addEventListener("DOMContentLoaded", () => {
            console.log("Page Loaded Successfully");

            console.log("Sales Order (raw data):", '<%= JSON.stringify(salesOrder) %>');
            console.log("Total Sales (raw data):", '<%= JSON.stringify(totalSales) %>');
            console.log("Order Dates (raw data):", '<%= JSON.stringify(orderDates) %>');
            console.log("Overall Stats (raw data):", '<%= JSON.stringify(overallStats) %>');

            const salesOrder = JSON.parse('<%= JSON.stringify(salesOrder) %>');
            const totalSales = JSON.parse('<%= JSON.stringify(totalSales) %>');
            const orderDates = JSON.parse('<%= JSON.stringify(orderDates) %>');
            const overallStats = JSON.parse('<%= JSON.stringify(overallStats) %>');

            console.log("salesOrder", salesOrder);
            console.log("totalSales", totalSales);
            console.log("orderDates", orderDates);
            console.log("overallStats", overallStats);

            const salesData = orderDates.map((date, index) => {
                const revenue = totalSales.length > 0 ? totalSales.reduce((sum, sale) => sum + sale.totalSales, 0) / orderDates.length : 0;
                return {
                    orderDate: new Date(date),
                    billTotal: revenue
                };
            });

            document.querySelectorAll("tbody tr").forEach(row => {
                const cells = row.querySelectorAll("td");

                if (cells.length >= 6) {
                    const orderDateStr = cells[1].textContent.trim();
                    const billTotalStr = cells[5].textContent.trim();

                    if (orderDateStr && billTotalStr) {
                        const orderDate = new Date(orderDateStr);
                        const billTotal = parseFloat(billTotalStr) || 0;

                        salesData.push({ orderDate, billTotal });
                    }
                }
            });

            console.log("Extracted Sales Data:", salesData);

            const { monthlySales, yearlySales } = processSalesData(salesData);

            generateCharts(monthlySales, yearlySales);
        });

        function processSalesData(orders) {
            const monthlySales = {};
            const yearlySales = {};

            orders.forEach(({ orderDate, billTotal }) => {
                const year = orderDate.getFullYear();
                const month = `${year}-${(orderDate.getMonth() + 1).toString().padStart(2, '0')}`;

                if (!monthlySales[month]) {
                    monthlySales[month] = 0;
                }
                monthlySales[month] += billTotal;

                if (!yearlySales[year]) {
                    yearlySales[year] = 0;
                }
                yearlySales[year] += billTotal;
            });

            return { monthlySales, yearlySales };
        }

        function generateCharts(monthlySales, yearlySales) {
            const monthlyLabels = [
                'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'
            ];

            const monthlyValues = monthlyLabels.map((label, index) => {
                const monthKey = `2025-${(index + 1).toString().padStart(2, '0')}`;
                return monthlySales[monthKey] || 0;
            });

            const yearlyLabels = ['2021', '2022', '2023', '2024', '2025'];
            const yearlyValues = yearlyLabels.map(year => yearlySales[year] || 0);

            const monthlyCtx = document.getElementById("monthlySalesChart").getContext("2d");
            new Chart(monthlyCtx, {
                type: "bar",
                data: {
                    labels: monthlyLabels,
                    datasets: [{
                        label: "Total Ordered Sales",
                        data: monthlyValues,
                        backgroundColor: "rgba(75, 192, 192, 0.7)",
                        borderColor: "rgba(75, 192, 192, 1)",
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Month'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Total Ordered Sales'
                            },
                            min: 500,
                            max: 10000,
                            stepSize: 1000,
                            beginAtZero: false
                        }
                    }
                }
            });

            const yearlyCtx = document.getElementById("yearlySalesChart").getContext("2d");
            new Chart(yearlyCtx, {
                type: "line",
                data: {
                    labels: yearlyLabels,
                    datasets: [{
                        label: "Total Ordered Sales",
                        data: yearlyValues,
                        backgroundColor: "rgba(255, 99, 132, 0.7)",
                        borderColor: "rgba(255, 99, 132, 1)",
                        borderWidth: 2,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Year'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Total Ordered Sales'
                            },
                            min: 10000,
                            max: 100000,
                            stepSize: 10000,
                            beginAtZero: false
                        }
                    }
                }
            });
        }
    </script>

