<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ChapterLane</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <link href="/adminassets/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            padding: 20px;
        }

        .form-container,
        .table-container {
            flex: 1;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .form-container {
            max-width: 500px;
        }

        .form-container h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #272e36;
        }

        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            display: none;
        }

        .btn {
            border-radius: 5px;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-primary {
            background-color: #121416;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-light {
            background-color: #f8f9fa;
            color: #333;
        }

        .btn-light:hover {
            background-color: #e2e6ea;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            margin-bottom: 20px;
        }

        .card-header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background-color: #f1f1f1;
        }

        .card-body {
            padding: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th,
        table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        table th {
            background-color: #e9ecef;
            font-weight: 600;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .menu-aside {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu-item {
            margin-bottom: 10px;
        }

        .menu-link {
            display: flex;
            align-items: center;
            color: #adb5bd;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .menu-link:hover {
            background-color: #495057;
            color: #fff;
        }

        .menu-link .icon {
            margin-right: 10px;
        }

        .dropdown-menu {
            min-width: 200px;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .form-container,
            .table-container {
                max-width: 100%;
            }
        }

        .error-message {
            color: red;
            display: none;
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <div class="logo logo-width-1">
                <a href="/admin/home">
                    <h4>CHAPTERLANE</h4>
                </a>
            </div>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/home"> <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item has-submenu">
                    <a class="menu-link" href="users"> <i class="icon material-icons md-store"></i>
                        <span class="text">Users</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/userlist">Users List</a>
                    </div>
                </li>
                <li class="menu-item has-submenu">
                    <a class="menu-link" href="products"> <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Products</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/productList">Product List</a>
                        <a href="/admin/addProduct">Add Product</a>
                    </div>
                </li>
                <li class="menu-item has-submenu">
                    <a class="menu-link" href="categories"> <i class="icon material-icons md-add_box"></i>
                        <span class="text">Categories</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/categories/">Categories</a>
                    </div>
                </li>
                <li class="menu-item has-submenu">
                    <a class="menu-link" href="orders"> <i class="icon material-icons md-shopping_cart"></i>
                        <span class="text">Orders</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/orderlist" class="active">Order List</a>
                    </div>
                </li>
                <li class="menu-item has-submenu">
                    <a class="menu-link" href="offers"> <i class="icon material-icons md-local_offer"></i>
                        <span class="text">Offer Management</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/offerManagement">Product Offers</a>
                        <a href="/admin/offerManagement">Category Offers</a>
                    </div>
                </li>
                <li class="menu-item has-submenu active">
                    <a class="menu-link" href="coupons"> <i class="icon material-icons md-card_giftcard"></i>
                        <span class="text">Coupon Management</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/addCoupon">Create Coupon</a>
                    </div>
                </li>
                <li class="menu-item has-submenu ">
                    <a class="menu-link" href="SalesReport"> <i class="icon material-icons md-card_giftcard"></i>
                        <span class="text">Sales</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/salesReport">sales report</a>
                    </div>
                </li>
            </ul>
        </nav>
    </aside>

    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">

            </div>
            <div class="col-nav">
                <li class="dropdown nav-item">

                </li>
                <li class="dropdown nav-item">

                </li>
                </ul>
            </div>
        </header>

        <section class="content-main">
            <div class="container">
                <div class="form-container">
                    <h2 class="content-title">ADD COUPONS</h2>

                    <div class="card mb-4">
                        <div class="card-body">
                            <form action="/admin/postCoupon" id="couponForm" method="POST">
                                <div class="mb-4">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" placeholder="Enter Coupon Code" class="form-control"
                                        id="couponCode" name="couponCode">
                                    <div class="error-message" id="couponCodeError"></div>
                                </div>

                                <div class="mb-4">
                                    <label for="couponName" class="form-label">Coupon Name</label>
                                    <input type="text" placeholder="Coupon Name" class="form-control" id="couponName"
                                        name="couponName">
                                    <div class="error-message" id="couponNameError"></div>
                                </div>

                                <div class="mb-4">
                                    <label for="discount" class="form-label">Discount</label>
                                    <input type="number" placeholder="Discount" class="form-control" name="discount"
                                        id="discount">
                                    <div class="error-message" id="discountError"></div>
                                </div>

                                <div class="mb-4">
                                    <label for="minimumAmount" class="form-label">Minimum Amount</label>
                                    <input type="number" placeholder="Minimum Amount" class="form-control"
                                        name="minimumAmount" id="minimumAmount">
                                    <div class="error-message" id="minimumAmountError"></div>
                                </div>


                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="table-container">
                    <h4 class="card-title">Added Coupons</h4>
                    <div class="card mb-4">
                        <div class="card-body">
                            <table class="table table-striped" id="couponsTable">
                                <thead>
                                    <tr>
                                        <th>Coupon Code</th>
                                        <th>Coupon Name</th>
                                        <th>Discount</th>
                                        <th>Minimum Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (availableCoupons && availableCoupons.length> 0) { %>
                                        <% availableCoupons.forEach(coupon=> { %>
                                            <tr data-coupon-id="<%= coupon._id %>"></tr>
                                            <td>
                                                <%= coupon.couponCode %>
                                            </td>
                                            <td>
                                                <%= coupon.couponName %>
                                            </td>
                                            <td>
                                                <%= coupon.discount %>
                                            </td>
                                            <td>
                                                <%= coupon.minimumAmount %>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger btn-sm"
                                                    onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>
                                            </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="5">No coupons available</td>
                                                    </tr>
                                                    <% } %>

                                </tbody>

                            </table>

                        </div>

                    </div>

                </div>


            </div>

        </section>

    </main>

    <script src="/adminassets-admin/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/adminassets-admin/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/adminassets-admin/js/vendors/select2.min.js"></script>
    <script src="/adminassets-admin/js/vendors/perfect-scrollbar.js"></script>
    <script src="/adminassets-admin/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="/adminassets-admin/js/main.js" type="text/javascript"></script>
    <script>

        document.getElementById('couponForm').addEventListener('submit', function (e) {

            let isValid = true;
            document.querySelectorAll('.error-message').forEach(el => el.textContent = '');

            const couponCode = document.getElementById('couponCode').value.trim();
            if (couponCode === '') {
                document.getElementById('couponCodeError').textContent = 'Coupon Code is required';
                isValid = false;
            }
            const couponName = document.getElementById('couponName').value.trim();
            if (couponName === '') {
                document.getElementById('couponNameError').textContent = 'Coupon Name is required';
                isValid = false;
            }
            const discount = parseFloat(document.getElementById('discount').value);
            if (isNaN(discount) || discount < 0) {
                document.getElementById('discountError').textContent = 'Discount must be a positive number';
                isValid = false;
            }
            const minimumAmount = parseFloat(document.getElementById('minimumAmount').value);
            if (isNaN(minimumAmount) || minimumAmount < 0) {
                document.getElementById('minimumAmountError').textContent = 'Minimum Amount must be a positive number';
                isValid = false;
            }
            if (!isValid) {
                e.preventDefault();
            }
        });

        function deleteCoupon(couponId) {
            if (confirm('Are you sure you want to delete this coupon?')) {
                fetch(`/admin/coupons?couponId=${couponId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            const row = document.querySelector(`tr[data-coupon-id="${couponId}"]`);
                            console.log('Row to be removed:', row);
                            if (row) {
                                row.remove();
                                console.log('Row removed successfully');
                            } else {
                                console.error('Row not found for couponId:', couponId);
                            }
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('There was a problem with the delete request:', error);
                    });
            }
        }




    </script>
</body>

</html>