        <form action="/admin/update/coupon"  method="POST" id="submit">
            
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title" style="font-family: 'Times New Roman', Times, serif;">UPDATE COUPON DETAILS</h2>
                        <div>
                            <button class="btn btn-md rounded font-sm hover-up">UPDATE</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <% if(typeof successMessage !== 'undefined') { %>
                                <p style="color:green; font-size: 15px;  font-family: 'Times New Roman', Times, serif;"><%= successMessage %></p>
                            <% } else if (typeof errorMessage !== 'undefined') { %>
                                <p style="color: red; font-size: 15px;  font-family: 'Times New Roman', Times, serif;" ><%= errorMessage %></p>
                            <% } %>
                            <div class="mb-4">
                                <label for="name" class="form-label">Coupon Name</label>
                                <input type="text" placeholder="Coupon Name" class="form-control" id="name" name="couponName" value="<%= coupon.name %>" required>
                                <div class="error-message" id="nameError"></div>
                            </div>
                            <div class="row gx-3">
                                <div class="col-md-4  mb-3 mr-30">
                                    Start Date: <%= new Date(coupon.startDate).toLocaleDateString('en-GB') %>
                                    <input type="date" class="form-control" name="startDate" id="startDate" value="<%= coupon.startDate %>">
                                    <div class="error-message" id="startDateError"></div>
                                </div>
                                <div class="col-md-4  mb-3">
                                     End Date: <%= new Date(coupon.endDate).toLocaleDateString('en-GB') %>
                                    <input type="date" class="form-control" name="endDate" id="endDate"  value="<%= coupon.endDate %>" >
                                    <div class="error-message" id="endDateError"></div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="minimumAmount" class="form-label">Minimum Amount</label>
                                    <input type="number" placeholder="Minimum Amount" name="minimumAmount" class="form-control" id="minimumAmount"  value="<%= coupon.minimumAmount %>" required min="0">
                                    <div class="error-message" id="minimumAmountError"></div>
                            </div>
                            <div class="mb-4">
                                <label for="maximumAmount" class="form-label">Maximum Amount</label>
                                <input type="number" placeholder="Maximum Amount" name="maximumAmount" class="form-control" id="maximumAmount"  value="<%= coupon.maximumAmount %>" required min="0" >
                                <div class="error-message" id="maximumAmountError"></div>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="discount" class="form-label">Discount (%)</label>
                                <input type="number" placeholder="Discount" class="form-control" name="discount" id="discount" value="<%= coupon.discount %>" required min="1" max="100">
