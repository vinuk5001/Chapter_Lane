    <!-- Main Script -->
    <script src="/assets-admin/js/main.js" type="text/javascript"></script>
    <script>  
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.getElementById('name');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const minAmountInput = document.getElementById('minimumAmount');
            const maxAmountInput = document.getElementById('maximumAmount');
            const discountInput = document.getElementById('discount');
    
            nameInput.addEventListener('blur', validateCouponName);
            nameInput.addEventListener('focus', clearErrorMessage.bind(null, 'nameError'));
    
            startDateInput.addEventListener('blur', validateStartDate);
            startDateInput.addEventListener('focus', clearErrorMessage.bind(null, 'startDateError'));
    
            endDateInput.addEventListener('blur', validateEndDate);
            endDateInput.addEventListener('focus', clearErrorMessage.bind(null, 'endDateError'));
            minAmountInput.addEventListener('blur', validateMinimumAmount);
            minAmountInput.addEventListener('focus', clearErrorMessage.bind(null, 'minimumAmountError'));
    
            maxAmountInput.addEventListener('blur', validateMaximumAmount);
            maxAmountInput.addEventListener('focus', clearErrorMessage.bind(null, 'maximumAmountError'));
    
            discountInput.addEventListener('blur', validateDiscount);
            discountInput.addEventListener('focus', clearErrorMessage.bind(null, 'discountError'));
    
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                
                if (!validateCouponName() || !validateStartDate() || !validateEndDate() || !validateMinimumAmount() || !validateMaximumAmount() || !validateDiscount()) {
                    event.preventDefault();
                }
            });

            const startDateValue = new Date(startDateInput.value);
            const endDateValue = new Date(endDateInput.value);
    
            function validateCouponName() {
                const nameInput = document.getElementById('name');
                const nameError = document.getElementById('nameError');
                if (!nameInput.value.trim()) {
                    displayErrorMessage(nameError, 'Coupon name is required');
                    return false;
                } else {
                    clearErrorMessage(nameError);
                    return true;
                }
            }
    
            function validateStartDate() {
                const startDateInput = document.getElementById('startDate');
                const startDateError = document.getElementById('startDateError');
                if (!startDateInput.value) {
                    displayErrorMessage(startDateError, 'Starting date is required');
                    return false;
                } else {
                    clearErrorMessage(startDateError);
                    return true;
                }
            }
    
            function validateEndDate() {
                const endDateInput = document.getElementById('endDate');
                const endDateError = document.getElementById('endDateError');
                if (!endDateInput.value) {
                    displayErrorMessage(endDateError, 'Ending date is required');
                    return false;
                } else if(endDateValue <= startDateValue) {
                    clearErrorMessage(endDateError,'End date must be greater than start date');
                    return false;
                }else{
                    clearErrorMessage(endDateError);
                    return true;
                }
            }
    
            function validateMinimumAmount() {
                const minAmountInput = document.getElementById('minimumAmount');
                const minAmountError = document.getElementById('minimumAmountError');
                const minAmountValue = parseFloat(minAmountInput.value);
                if (!minAmountInput.value) {
                    displayErrorMessage(minAmountError, 'Minimum amount is required');
                    return false;
                } else if (minAmountValue < 0) {
                    displayErrorMessage(minAmountError, 'Minimum amount cannot be negative');
                    return false;
                } else {
                    clearErrorMessage(minAmountError);
                    return true;
                }
            }
    
            function validateMaximumAmount() {
                const maxAmountInput = document.getElementById('maximumAmount');
                const maxAmountError = document.getElementById('maximumAmountError');
                const maxAmountValue = parseFloat(maxAmountInput.value);
                const minAmountValue = parseFloat(document.getElementById('minimumAmount').value);
                if (!maxAmountInput.value) {
                    displayErrorMessage(maxAmountError, 'Maximum amount is required');
                    return false;
                } else if (maxAmountValue < 0) {
                    displayErrorMessage(maxAmountError, 'Maximum amount cannot be negative');
                    return false;
                } else if (minAmountValue >= maxAmountValue) {
                    displayErrorMessage(maxAmountError, 'Maximum amount must be greater than minimum amount');
                    return false;
                } else {
                    clearErrorMessage(maxAmountError);
                    return true;
                }
            }
    
            function validateDiscount() {
                const discountInput = document.getElementById('discount');
                const discountError = document.getElementById('discountError');
                const discountValue = parseFloat(discountInput.value);
                if (!discountInput.value) {
                    displayErrorMessage(discountError, 'Discount is required');
                    return false;
                } else if (discountValue < 0) {
                    displayErrorMessage(discountError, 'Discount cannot be negative');
                    return false;
                } else if (discountValue < 1 || discountValue > 100) {
                    displayErrorMessage(discountError, 'Discount must be between 1 and 100');
                    return false;
                } else {
                    clearErrorMessage(discountError);
                    return true;
                }
            }
    
            function displayErrorMessage(errorElement, message) {
                errorElement.textContent = message;
            }
    
            function clearErrorMessage(errorElementId) {
                const errorElement = document.getElementById(errorElementId);
                errorElement.textContent = '';
            }

            
        });
    </script>              
</body>
