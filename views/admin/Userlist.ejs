    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">

            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
                <ul class="nav">

                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                class="material-icons md-cast"></i></a>
                    </li>

                    <li class="dropdown nav-item">

                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">User list</h2>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th class="text-end"> Action </th>
                                </tr>

                            </thead>
                            <tbody>
                                <% for(let i=0;i< users.length;i++) { %>
                                    <tr>
                                        <td width="40%">
                                            <a href="#" class="itemside">
                                                <div class="left">
                                                    <img src="adminassets/imgs/people/avatar1.jpg"
                                                        class="img-sm img-avatar" alt="Userpic">
                                                </div>
                                                <div class="info pl-3">
                                                    <h6 class="mb-0 title"></h6>
                                                    <h6 class="mb-0 title">
                                                        <%= users[i].username%>
                                                    </h6>
                                                    <small class="text-muted">User ID: #439</small>
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <%= users[i].email%>
                                        </td>
                                        <td>
                                            <%= users[i].mobile_number%>
                                        </td>
                                        <td class="text-end">
                                            <button id="toggle-btn-<%= users[i]._id %>"
                                                class="btn btn-sm <%= users[i].is_blocked ? 'btn-success':'btn-danger'%>"
                                                onclick="toggleUser('<%= users[i]._id %>')">
                                                <%= users[i].is_blocked ? 'Unblock' : 'Block' %>
                                            </button>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link"
                                    href="/admin/userlist?page=<%= currentPage - 1 %>&limit=<%= limit %>">
                                    <i class="material-icons md-chevron_left"></i>
                                </a>
                            </li>
                            <% } %>

                                <% if (totalPages> 1) { %>
                                    <% if (currentPage> 3) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/userlist?page=1&limit=<%= limit %>">1</a>
                                        </li>
                                        <% if (currentPage> 4) { %>
                                            <li class="page-item disabled"><a class="page-link dot" href="#">...</a>
                                            </li>
                                            <% } %>
                                                <% } %>

                                                    <% for (let i=Math.max(1, currentPage - 2); i <=Math.min(totalPages,
                                                        currentPage + 2); i++) { %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="/admin/userlist?page=<%= i %>&limit=<%= limit %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } %>

                                                            <% if (currentPage < totalPages - 2) { %>
                                                                <% if (currentPage < totalPages - 3) { %>
                                                                    <li class="page-item disabled"><a
                                                                            class="page-link dot" href="#">...</a></li>
                                                                    <% } %>
                                                                        <li class="page-item">
                                                                            <a class="page-link"
                                                                                href="/admin/userlist?page=<%= totalPages %>&limit=<%= limit %>">
                                                                                <%= totalPages %>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>
                                                                            <% } %>

                                                                                <% if (currentPage < totalPages) { %>
                                                                                    <li class="page-item">
                                                                                        <a class="page-link"
                                                                                            href="/admin/userlist?page=<%= currentPage + 1 %>&limit=<%= limit %>">
                                                                                            <i
                                                                                                class="material-icons md-chevron_right"></i>
                                                                                        </a>
                                                                                    </li>
                                                                                    <% } %>
                    </ul>
                </nav>
            </div>

        </section>

    </main>
    <script>

        function toggleUser(userId) {
            const token = localStorage.getItem('admin');
            console.log("tokennnn", window.document.cookie.length);

            if (!token) {
                console.error("No token found in localstorage");
                return;
            }
            fetch(`/admin/toggle-user/${userId}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "Authorization": `Bearer ${token}`,
                },
            })
                .then(response => response.json())
                .then(data => {
                    console.log("Response from server:", data);

                    if (data.isBlocked !== undefined) {
                        const button = document.getElementById(`toggle-btn-${userId}`);
                        console.log("buttttton", button);
                        if (button) {
                            button.innerText = data.isBlocked ? "Unblock" : "Block";
                            button.classList.toggle("btn-danger", !data.isBlocked);
                            button.classList.toggle("btn-success", data.isBlocked);
                        }
                        Swal.fire({
                            icon: data.isBlocked ? 'success' : 'info',
                            title: data.isBlocked ? 'User Blocked' : 'User Unblocked',
                            text: data.isBlocked ? 'The user has been successfully blocked ' : 'The user has been successfully unBlocked.',
                            confirmButtonText: 'OK',
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to toggle user status.',
                            confirmButtonText: 'OK',
                        })
                    }
                })
                .catch(error => {
                    console.error("Error:", error)
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while toggling user status.',
                        confirmButtonText: 'OK',
                    })

                })

        }



    </script>

