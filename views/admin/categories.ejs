    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">

            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside">
                    <i class="material-icons md-apps"></i>
                </button>
                <ul class="nav">
                    <li class="nav-item">

                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#">
                            <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon">
                            <i class="material-icons md-cast"></i>
                        </a>
                    </li>
                    <li class="dropdown nav-item">


                    </li>
                    <li class="dropdown nav-item">


                    </li>
                </ul>
            </div>
        </header>

        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories</h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <div>
                    <a href="/admin/showunlistedcategory" class="btn btn-primary">Show Unlisted</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-2 col-6">
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/categories" method="POST">
                                <div class="mb-4">
                                    <label for="category_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="name"
                                        id="category_name" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" name="description"
                                        class="form-control"></textarea>
                                </div>
                                <div class="d-grid">
                                    <% if (typeof message !=='undefined' ) { %>
                                        <p style="color: red;">
                                            <%= message %>
                                        </p>
                                        <% } %>
                                            <button class="btn btn-primary">Add category</button>

                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(category && category.length> 0) { %>
                                            <% category.forEach(item=> { %>
                                                <tr>
                                                    <td><b>
                                                            <%= item.name %>
                                                        </b></td>
                                                    <td>
                                                        <%= item.description %>
                                                    </td>

                                                    <td class="text-end">
                                                        <div class="col-action">
                                                            <a href="/admin/editCategory?id=<%= item._id %>"
                                                                class="btn btn-sm font-sm rounded btn-brand">
                                                                <i class="material-icons md-edit"></i> Edit
                                                            </a>

                                                            <% if (item.is_Listed) { %>
                                                                <a href="/admin/unlistCategory?id=<%= item._id %>"
                                                                    class="btn btn-sm font-sm btn-light rounded">
                                                                    <i class="material-icons md-delete_forever"></i>
                                                                    Unlist
                                                                </a>
                                                                <% } else { %>
                                                                    <a href="/admin/listCategory?id=<%= item._id %>"
                                                                        class="btn btn-sm font-sm btn-light rounded">
                                                                        <i class="material-icons md-delete_forever"></i>
                                                                        List
                                                                    </a>
                                                                    <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="3">No categories available.</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">

                        <% if (typeof currentPage !=="undefined" && currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link"
                                    href="/admin/categories?page=<%= currentPage - 1 %>&limit=<%= limit %>">
                                    <i class="material-icons md-chevron_left"></i>
                                </a>
                            </li>
                            <% } %>

                                <% if (typeof totalPages !=="undefined" && totalPages> 1) { %>
                                    <% if (currentPage> 3) { %>
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="/admin/categories?page=1&limit=<%= limit %>">1</a>
                                        </li>
                                        <% if (currentPage> 4) { %>
                                            <li class="page-item disabled"><a class="page-link dot" href="#">...</a>
                                            </li>
                                            <% } %>
                                                <% } %>

                                                    <% for (let i=Math.max(1, currentPage - 2); i <=Math.min(totalPages,
                                                        currentPage + 2); i++) { %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="/admin/categories?page=<%= i %>&limit=<%= limit %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } %>


                                                            <% if (currentPage < totalPages - 2) { %>
                                                                <% if (currentPage < totalPages - 3) { %>
                                                                    <li class="page-item disabled"><a
                                                                            class="page-link dot" href="#">...</a>
                                                                    </li>
                                                                    <% } %>
                                                                        <li class="page-item">
                                                                            <a class="page-link"
                                                                                href="/admin/categories?page=<%= totalPages %>&limit=<%= limit %>">
                                                                                <%= totalPages %>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>
                                                                            <% } %>

                                                                                <% if (typeof currentPage !=="undefined"
                                                                                    && currentPage < totalPages) { %>

                                                                                    <li class="page-item">
                                                                                        <a class="page-link"
                                                                                            href="/admin/categories?page=<%= currentPage + 1 %>&limit=<%= limit %>">
                                                                                            <i
                                                                                                class="material-icons md-chevron_right"></i>
                                                                                        </a>
                                                                                    </li>
                                                                                    <% } %>
                    </ul>
                </nav>
            </div>


        </section>

    </main>
    <script>
        function validateForm() {
            const name = document.getElementById('category_name').value.trim();
            if (name.trim() === '') {
                alert('Category name is required');
                return false;
            }
            return true;
        }
    </script>

